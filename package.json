{
  "name": "m16",
  "version": "0.0.1",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "build:test": "yarn build && yarn test",
    "commit": "git-cz",
    "is:ready": "yarn lint && yarn build && yarn test:ready",
    "lint": "eslint --ignore-pattern '/lib/' '*/**/*.ts' --quiet --fix",
    "test": "jest --clearCache && jest -i",
    "test:coverage": "jest -i --coverage",
    "test:dev": "jest --watch",
    "test:ready": "jest --clearCache && jest -i --coverage"
  },
  "dependencies": {
    "mongodb": "^3.5.9"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": "git@github.com:Cervantes007/m16.git",
  "license": "MIT"
}
